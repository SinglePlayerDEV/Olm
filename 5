#include<iostream>
#include<vector>

using namespace std;

struct deadline
{
	int days;
	int cost;
};

int main()
{
	int N, sum = 0, daysX = 1;
	while (true)
	{
		cin >> N;
		if (N>=1 && N<=1000)
			break;
	}
	vector<deadline> arr(N);
	for (int i = 0; i < N; i++)
	{
		cin >> arr[i].cost;
		if (arr[i].cost <= 1000000 && arr[i].cost >= 0)
		{
		}
		else {
			break;
		}
		cin >> arr[i].days;
		if (arr[i].days <= 1000000 && arr[i].days >= 1)
		{
			continue;
		}
		else {
			break;
		}
	}
	for (int i = 0; i < N - 1; i++) {
		for (int j = 0; j <  N  - i - 1; j++) {
			if (arr[j].cost < arr[j+1].cost) {
				swap(arr[j].cost, arr[j + 1].cost);
			}
		}
	}
	
	for (int i = 0; i< N ; i++)
	{
		if (daysX < arr[i].days)
		{
			sum += arr[i].cost;
			daysX++;
		}
	}
	cout << sum;

	return 0;
}
